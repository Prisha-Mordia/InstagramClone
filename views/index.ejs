  <!--THE END-->
  <div class="modal fade" id="newPostModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">New Post</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form action="/post" method="post" enctype="multipart/form-data">
            <div class="mb-3">
              <label for="image" class="col-form-label">Caption:</label>
              <input type="file" name="image" id="image">
            </div>
            <div class="mb-3">
              <label for="caption" class="col-form-label">Caption:</label>
              <textarea class="form-control" name="caption" id="caption"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">POST</button>
          </form>
        </div>
      </div>
    </div>
  </div>
